{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch api",
      "type": "node-terminal",
      "request": "launch",
      "cwd": "${workspaceFolder}/apps/api",
      "command": "bun run dev",
      "skipFiles": ["**/<node_internals>/**"],
      "sourceMaps": true,
      "smartStep": true,
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Launch Dev Server",
      "type": "node-terminal",
      "request": "launch",
      "cwd": "${workspaceFolder}/apps/demo",
      "command": "bun run dev",
      "isBackground": true // DO NOT REMOVE THIS. Needed for debugging to work in demo.
    },
    {
      "name": "Attach to Edge",
      "type": "msedge",
      "request": "launch",
      "url": "http://localhost:3006",
      "webRoot": "${workspaceFolder}",
      "pathMapping": {
        "/src": "${workspaceFolder}/apps/demo/src",
        "/@fs/D:/repos/djarekg/tampa-taffy/": "D:/repos/djarekg/tampa-taffy/",
        "/@fs/d:/repos/djarekg/tampa-taffy/": "D:/repos/djarekg/tampa-taffy/"
      },
      "sourceMapPathOverrides": {
        "/@fs/*/apps/demo/src/*": "${workspaceFolder}/apps/demo/src/*",
        "/src/*": "${workspaceFolder}/apps/demo/src/*",
        "/@id/@tt/core/*": "${workspaceFolder}/packages/core/src/*",
        "/@id/@tt/components/*": "${workspaceFolder}/packages/components/src/*",
        "/@id/@tt/db/*": "${workspaceFolder}/packages/db/src/*",
        "/@tt/core/*": "${workspaceFolder}/packages/core/src/*",
        "/@tt/components/*": "${workspaceFolder}/packages/components/src/*",
        "/@tt/db/*": "${workspaceFolder}/packages/db/src/*",
        "/@fs/*/packages/core/src/*": "${workspaceFolder}/packages/core/src/*",
        "/@fs/*/packages/components/src/*": "${workspaceFolder}/packages/components/src/*",
        "/@fs/*/packages/db/src/*": "${workspaceFolder}/packages/db/src/*"
      }
    },
    {
      "name": "Attach to Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3006",
      "webRoot": "${workspaceFolder}",
      "pathMapping": {
        "/src": "${workspaceFolder}/apps/demo/src",
        "/@fs/D:/repos/djarekg/tampa-taffy/": "D:/repos/djarekg/tampa-taffy/",
        "/@fs/d:/repos/djarekg/tampa-taffy/": "D:/repos/djarekg/tampa-taffy/"
      },
      "sourceMapPathOverrides": {
        "/@fs/*/apps/demo/src/*": "${workspaceFolder}/apps/demo/src/*",
        "/src/*": "${workspaceFolder}/apps/demo/src/*",
        "/@id/@tt/core/*": "${workspaceFolder}/packages/core/src/*",
        "/@id/@tt/components/*": "${workspaceFolder}/packages/components/src/*",
        "/@id/@tt/db/*": "${workspaceFolder}/packages/db/src/*",
        "/@tt/core/*": "${workspaceFolder}/packages/core/src/*",
        "/@tt/components/*": "${workspaceFolder}/packages/components/src/*",
        "/@tt/db/*": "${workspaceFolder}/packages/db/src/*",
        "/@fs/*/packages/core/src/*": "${workspaceFolder}/packages/core/src/*",
        "/@fs/*/packages/components/src/*": "${workspaceFolder}/packages/components/src/*",
        "/@fs/*/packages/db/src/*": "${workspaceFolder}/packages/db/src/*"
      }
    }
  ],
  "compounds": [
    {
      "name": "Debug app (edge)",
      "configurations": ["Launch api", "Attach to Edge"],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "1",
        "order": 1
      }
    },
    {
      "name": "Debug app (chrome)",
      "configurations": ["Launch api", "Attach to Chrome"],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "1",
        "order": 2
      }
    },
    {
      "name": "Debug Full Stack (edge)",
      "configurations": ["Launch api", "Launch Dev Server", "Attach to Edge"],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "2",
        "order": 1
      }
    }
  ]
}
