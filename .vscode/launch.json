{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch api",
      "cwd": "${workspaceFolder}/apps/api",
      "request": "launch",
      "type": "node-terminal",
      "command": "bun run dev",
      "skipFiles": ["**/<node_internals>/**"],
      "sourceMaps": true,
      "smartStep": true,
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Launch web (edge)",
      "type": "node-terminal",
      "request": "launch",
      "cwd": "${workspaceFolder}\\apps\\demo",
      "command": "bun run dev",
      "serverReadyAction": {
        "action": "debugWithEdge",
        "killOnServerStop": true,
        "pattern": "Local:\\s+(http?://\\S+)",
        "uriFormat": "%s",
        "webRoot": "${workspaceFolder}\\apps\\demo"
      }
    },
    {
      "name": "Launch web (chrome)",
      "type": "node-terminal",
      "request": "launch",
      "cwd": "${workspaceFolder}\\apps\\demo",
      "command": "bun run dev",
      "serverReadyAction": {
        "action": "debugWithChrome",
        "killOnServerStop": true,
        "pattern": "Local:\\s+(http?://\\S+)",
        "uriFormat": "%s",
        "webRoot": "${workspaceFolder}\\apps\\demo"
      }
    }
  ],
  "compounds": [
    {
      "name": "Debug app (edge)",
      "configurations": ["Launch api", "Launch web (edge)"],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "1",
        "order": 1
      }
    },
    {
      "name": "Debug app (chrome)",
      "configurations": ["Launch api", "Launch web (chrome)"],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "1",
        "order": 1
      }
    }
  ]
}
