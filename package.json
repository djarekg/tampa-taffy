{
  "name": "@tt/workspace",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "clean": " bunx rimraf bun.lock node_modules packages/components/node_modules packages/core/node_modules packages/db/node_modules apps/api/node_modules apps/demo/node_modules",
    "setup": "bun run clean && bun install",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check",
    "lint": "oxlint --type-aware --type-check",
    "lint:fix": "oxlint --type-aware --fix"
  },
  "devDependencies": {
    "@types/bun": "1.3.9",
    "@typescript/native-preview": "7.0.0-dev.20260221.1",
    "oxfmt": "^0.34.0",
    "oxlint": "^1.49.0",
    "oxlint-tsgolint": "^0.14.2"
  },
  "overrides": {
    "typescript": "npm:@typescript/native-preview@7.0.0-dev.20260221.1"
  },
  "engines": {
    "bun": "1.3.10"
  },
  "packageManager": "bun@1.3.10"
}
